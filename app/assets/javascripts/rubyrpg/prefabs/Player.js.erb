// Player Prefab
//
// All Player related game functions are included within this file
// Player object can be created by:
//
//      this.player = new Player(this.game, x, y);
//		this.game.add.existing(this.player);
//
var Player = function(game, player, x, y, frame) {
    this.name = player.name;
    this.race = player.race;
    // ...

    // Center sprite
    Phaser.Sprite.call(this, game, x, y, 'player', frame);
    this.anchor.setTo(0.5, 0.5);

    // Label player name
    this.label_name = game.add.text(0, 0, this.name, { font: 'bold 12px Arial', fill: '#000' });
    this.label_name.anchor.set(0.5, 2);
    this.addChild(this.label_name);

	// Set up animations
    this.animations.add('walkDown',[0,1,2,3],6,true);
    this.animations.add('walkLeft',[4,5,6,7],6,true);
    this.animations.add('walkRight',[8,9,10,11],6,true);
    this.animations.add('walkUp',[12,13,14,15],6,true);

    //Enable Physics
    this.game.physics.p2.enableBody(this);
    this.body.setZeroDamping();
    this.body.collideWorldBounds = true;
};

Player.prototype = Object.create(Phaser.Sprite.prototype);
Player.prototype.constructor = Player;
Player.prototype.update = function() {
};
